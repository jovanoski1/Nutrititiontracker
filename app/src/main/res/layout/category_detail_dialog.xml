<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/categoryDetailsNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:text="Category"
        android:textSize="32sp"
        />
    <ImageView
        android:id="@+id/categoryDetailsImageIv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryDetailsNameTv"
        />

    <TextView
        android:id="@+id/categoryDetailsDescriptionTv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:maxLines="25"
        android:lines="25"
        android:scrollbars="vertical"
        android:layout_margin="16dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryDetailsImageIv"
        />
    <Button
        android:id="@+id/categoryDetailsCloseBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryDetailsDescriptionTv"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
